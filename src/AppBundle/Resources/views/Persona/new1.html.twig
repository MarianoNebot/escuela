        <div class="control-label col-md-2"> {{form_label(form.genero)}} </div>
        <div class="col-md-10"> {{ form_widget(form.genero) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.activo)}} </div>
        <div class="col-md-10"> {{ form_widget(form.activo) }} </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <button class="btn btn-primary" type="submit">Registrar</button>
        </div>
    </div>

    {{ form_end(form) }}
</div>

<script>
var $nacPais = $('#Nac_Pais_ID');
// When sport gets selected ...
$nacPais.change(function() {
  // ... retrieve the corresponding form.
  var $form = $(this).closest('form');
  // Simulate form data, but only include the selected sport value.
  var data = {};
  data[$nacPais.attr('name')] = $nacPais.val();
  // Submit data via AJAX to the form's action path.
  $.ajax({
    url : $form.attr('action'),
    type: $form.attr('method'),
    data : data,
    success: function(html) {
      // Replace current position field ...
      $('#Nac_Pronvicia_ID').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#Nac_Pronvicia_ID')
      );
      // Position field now displays the appropriate positions.
    }
  });
});
</script>

{% endblock %}



