    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.nacLocalidad)}} </div>
        <div class="col-md-10"> {{ form_widget(form.nacLocalidad) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.estadoCivil)}} </div>
        <div class="col-md-10"> {{ form_widget(form.estadoCivil) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.resiPais)}} </div>
        <div class="col-md-10"> {{ form_widget(form.resiPais) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.resiProvincia)}} </div>
        <div class="col-md-10"> {{ form_widget(form.resiProvincia) }} </div>
