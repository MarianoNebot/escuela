        <div class="col-md-10"> {{ form_widget(form.domicilio) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.fechaNacimiento)}} </div>
        <div class="col-md-10"> {{ form_widget(form.fechaNacimiento) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.telefono)}} </div>
