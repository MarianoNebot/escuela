    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.correoElectronico)}} </div>
        <div class="col-md-10"> {{ form_widget(form.correoElectronico) }} </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> {{form_label(form.nacPais)}} </div>
        <div class="col-md-10"> {{ form_widget(form.nacPais) }} {# <select id="Nac_Pais_ID"></select>#} </div>
